                <ResourceDictionary Source="./Themes/MessageBox.xaml"></ResourceDictionary>
                <ResourceDictionary Source="./Themes/StylishScrollbar.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>